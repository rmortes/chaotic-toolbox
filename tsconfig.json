{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Stories */
    "types": [
      "react",
      "react-dom",
      "@storylite/vite-plugin/virtual"
    ],
    "jsx": "react-jsx",
  },
  "include": [
    "src",
    "stories",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}